= form_for(@discount_campaign) do |f|
  - if @discount_campaign.errors.any?
    #error_explanation
      %h2
        = pluralize(@discount_campaign.errors.count, "error")
        prohibited this discount_campaign from being saved:
      %ul
        - @discount_campaign.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :discount_id
    %br/
    = f.text_field :discount_id
  .field
    = f.label :product_id
    %br/
    = f.text_field :product_id
  .actions
    = f.submit
